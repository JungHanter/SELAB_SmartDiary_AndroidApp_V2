<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:padding="12dp"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/button_list_element"
        android:weightSum="1"
        android:id="@+id/viewDiaryListElem" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/grey_700"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/tvDiaryListElemTitle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/grey_800"
            android:text="2016. 09. 05."
            android:id="@+id/tvDiaryListElemDate" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:maxLines="8"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="@color/grey_600"
            android:text="@string/lorem_ipsum_test"
            android:id="@+id/tvDiaryListElemContent"
            android:layout_weight="0.13" />

    </LinearLayout>
</LinearLayout>