<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layoutSearch"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tabSearchTime"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_horizontal|top"
                android:textColor="@color/pink_A200"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Time Period"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/pink_A200"
                android:id="@+id/tabSearchTimeSelected"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tabSearchText"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_horizontal|top"
                android:textColor="@color/pink_A200"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/pink_A200"
                android:id="@+id/tabSearchTextSelected"
                android:visibility="invisible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tabSearchTag"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_horizontal|top"
                android:textColor="@color/pink_A200"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Tag"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/pink_A200"
                android:id="@+id/tabSearchTagSelected"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/layoutSearchTime"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_700"
                    android:text="Start :   "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSearchStartDate"
                    android:textColor="@color/pink_a_clickable_text_color"
                    android:text="2016.09.29."
                    android:focusable="true"
                    android:clickable="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_700"
                    android:text="End :   "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSearchEndDate"
                    android:textColor="@color/pink_a_clickable_text_color"
                    android:text="2016.10.05."
                    android:focusable="true"
                    android:clickable="true"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSearchTime"
                android:textSize="16sp"
                android:textColor="@color/indigo_clickable_text_color"
                android:paddingStart="8dp"
                android:paddingEnd="4dp"
                android:text="SEARCH"
                android:focusable="true"
                android:clickable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/layoutSearchText"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_700"
                android:text="Search Text: "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:singleLine="true"
                android:lines="1"
                android:maxLines="1"
                android:id="@+id/edtSearchText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSearchText"
                android:textSize="16sp"
                android:textColor="@color/indigo_clickable_text_color"
                android:paddingStart="8dp"
                android:paddingEnd="4dp"
                android:text="SEARCH"
                android:focusable="true"
                android:clickable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/layoutSearchTag"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_700"
                android:text="Search Tag: "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:singleLine="true"
                android:lines="1"
                android:maxLines="1"
                android:id="@+id/edtSearchTag" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSearchTag"
                android:textSize="16sp"
                android:textColor="@color/indigo_clickable_text_color"
                android:paddingStart="8dp"
                android:paddingEnd="4dp"
                android:text="SEARCH"
                android:focusable="true"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/toolbar_shadow"/>
</LinearLayout>