<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/grey_100"
    tools:context=".WriteDiaryActivity">

    <ProgressBar
        android:id="@+id/progressLayout"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/viewWriteDiaryForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="ssu.sel.smartdiary.WriteDiaryActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minHeight="220dp"
                android:maxHeight="400dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/background_list_element">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtDiaryTitle"
                    android:textColor="@color/teal_500"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:lines="1"
                    android:singleLine="true"
                    android:hint="Title"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/teal500_clickable_text_color"
                        android:text="2016. 09. 07."
                        android:focusable="true"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:id="@+id/tvDiarySelectDate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/teal500_clickable_text_color"
                        android:text="18:23"
                        android:paddingLeft="6dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:id="@+id/tvDiarySelectTime" />

                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="120dp"
                    android:maxHeight="400dp"
                    android:inputType="textMultiLine"
                    android:textSize="18sp"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="Diary Content"
                    android:id="@+id/edtDiaryContent"
                    android:layout_marginTop="4dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:lines="1"
                    android:textSize="14sp"
                    android:hint="Textual Annotation"
                    android:id="@+id/edtAnnotation"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:maxHeight="200dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_list_element">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:background="?attr/editTextBackground"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/teal_500"
                    android:text="Environmental Contexts" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Location: "/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/edtEnvLocation"
                            android:inputType="text"
                            android:lines="1" />
                    </LinearLayout>

                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="horizontal">-->
                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:textSize="14sp"-->
                            <!--android:text="Weather: "/>-->
                        <!--<EditText-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:textSize="14sp"-->
                            <!--android:id="@+id/edtWeather" />-->
                    <!--</LinearLayout>-->

                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_indigo"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="Confirm"
                android:onClick="onClick"
                android:id="@+id/btnDiaryConfirm" />

            <!-- for Diary Analytics -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:maxHeight="200dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_list_element"
                android:id="@+id/viewDiaryAnalytics"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:background="?attr/editTextBackground"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/teal_500"
                    android:text="Diary Semantic Analytics" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:id="@+id/tvNoAnalytics"
                        android:text="There is no analytics result."/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/viewPositiveAnalytics">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Positiveness: "/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/tvPositiveAnalytics"
                            android:background="?attr/editTextBackground"
                            android:lines="1" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressAnalyticsLayout"
                style="?android:attr/progressBarStyleLarge"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
