<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/grey_100"
    tools:context=".WriteDiaryActivity">

    <ProgressBar
        android:id="@+id/progressLayout"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/viewWriteDiaryForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="ssu.sel.smartdiary.WriteDiaryActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minHeight="220dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/background_list_element">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtDiaryTitle"
                    android:textColor="@color/indigo_500"
                    android:backgroundTint="@color/indigo_500"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:lines="1"
                    android:singleLine="true"
                    android:hint="Title"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/pink_a_clickable_text_color"
                        android:text="2016. 09. 07."
                        android:focusable="true"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:id="@+id/tvDiarySelectDate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/pink_a_clickable_text_color"
                        android:text="18:23"
                        android:paddingLeft="6dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:id="@+id/tvDiarySelectTime" />

                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="120dp"
                    android:inputType="textMultiLine"
                    android:textSize="18sp"
                    android:gravity="top"
                    android:hint="Diary Content"
                    android:id="@+id/edtDiaryContent"
                    android:layout_marginTop="4dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:lines="1"
                    android:textSize="14sp"
                    android:hint="Textual Annotation"
                    android:id="@+id/edtAnnotation"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:padding="8dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_list_element">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/pink_A200"
                    android:text="Waiting to Download Audio ..."
                    android:id="@+id/tvDiaryAudioDownloading"
                    android:visibility="gone"  />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layoutDiaryAudioPlayer"
                    android:visibility="visible">

                    <Button
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:onClick="onAudioControlClick"
                        android:background="@drawable/button_audio_control_play"
                        android:id="@+id/btnDiaryAudioPlay"
                        android:layout_marginTop="8dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"/>
                    <Button
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:onClick="onAudioControlClick"
                        android:background="@drawable/button_audio_control_pause"
                        android:id="@+id/btnDiaryAudioPause"
                        android:layout_marginTop="8dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:visibility="invisible"/>
                    <Button
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:onClick="onAudioControlClick"
                        android:background="@drawable/button_audio_control_backward"
                        android:id="@+id/btnDiaryAudioBackward"
                        android:layout_toStartOf="@id/btnDiaryAudioPlay"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="48dp"
                        android:layout_alignParentTop="true"/>
                    <Button
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:onClick="onAudioControlClick"
                        android:background="@drawable/button_audio_control_forward"
                        android:id="@+id/btnDiaryAudioForward"
                        android:layout_toEndOf="@id/btnDiaryAudioPlay"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="48dp"
                        android:layout_alignParentTop="true"/>

                    <SeekBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:progressTint="@color/pink_A200"
                        android:id="@+id/progressDiaryAudio"
                        android:max="100"
                        android:progress="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/grey_700"
                        android:text="00:00"
                        android:gravity="center_vertical"
                        android:id="@+id/tvDiaryAudioNowLength"
                        android:layout_alignTop="@+id/progressDiaryAudio"
                        android:layout_alignBottom="@+id/progressDiaryAudio"
                        android:layout_toStartOf="@+id/progressDiaryAudio"
                        android:layout_marginRight="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/grey_700"
                        android:text="01:00"
                        android:id="@+id/tvDiaryAudioMaxLength"
                        android:gravity="center_vertical"
                        android:layout_alignTop="@+id/progressDiaryAudio"
                        android:layout_alignBottom="@+id/progressDiaryAudio"
                        android:layout_toEndOf="@+id/progressDiaryAudio"
                        android:layout_marginLeft="12dp"/>

                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:id="@+id/layoutAttachment">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="72dp"
                    android:background="@drawable/button_list_element"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btnAttachPicture"
                    android:onClick="onAttachButtonClick"
                    android:src="@drawable/iconmonstr_attachment_picture"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="72dp"
                    android:background="@drawable/button_list_element"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btnAttachCamera"
                    android:onClick="onAttachButtonClick"
                    android:src="@drawable/iconmonstr_attachment_camera"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="72dp"
                    android:background="@drawable/button_list_element"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btnAttachVideo"
                    android:onClick="onAttachButtonClick"
                    android:src="@drawable/iconmonstr_attachment_video"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="72dp"
                    android:background="@drawable/button_list_element"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btnAttachMusic"
                    android:onClick="onAttachButtonClick"
                    android:src="@drawable/iconmonstr_attachment_music"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/exampleAttachment"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="0dp">
                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="vertical">-->
                <!--</LinearLayout>-->
                <ImageView
                    android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_image_family_dinner"/>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_list_element">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:background="?attr/editTextBackground"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/pink_A200"
                    android:text="Environmental Contexts" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/pink_A200"
                            android:text="Place: "/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/edtEnvPlace"
                            android:inputType="text"
                            android:hint="ex) Cafe, School, ..."
                            android:lines="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/pink_A200"
                            android:text="Weather: "/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/edtEnvWeather"
                            android:inputType="text"
                            android:hint="ex) Sunny, Rainy, ..."
                            android:lines="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/pink_A200"
                            android:text="National Holidays:"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/edtHolidays"
                            android:inputType="text"
                            android:hint="ex) Christmas, Thanks Giving Day, ..."
                            android:lines="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/pink_A200"
                            android:text="Special Events:"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/edtEnvEvents"
                            android:inputType="text"
                            android:hint="ex) Meeting, Wedding, ..."
                            android:lines="1" />
                    </LinearLayout>

                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="horizontal">-->
                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:textSize="14sp"-->
                            <!--android:text="Weather: "/>-->
                        <!--<EditText-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:textSize="14sp"-->
                            <!--android:id="@+id/edtWeather" />-->
                    <!--</LinearLayout>-->

                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_indigo"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="Confirm"
                android:onClick="onClick"
                android:id="@+id/btnDiaryConfirm" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
